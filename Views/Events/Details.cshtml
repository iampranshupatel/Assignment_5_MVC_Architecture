@model Assignment_5.Models.Event
@{
    ViewData["Title"] = "Event Details";
    Layout = "_Layout";
}

<section class="content-container">
  <h2 class="section-title">Event Details</h2>

  <div class="form-group">
    <strong>Title:</strong>
    <p>@Model.Title</p>
  </div>

  <div class="form-group">
    <strong>Description:</strong>
    <p>@Model.Description</p>
  </div>

  <div class="form-row">
    <div class="form-group half-width">
      <strong>Date:</strong>
      <p>@Model.Date.ToString("yyyy-MM-dd")</p>
    </div>
    <div class="form-group half-width">
      <strong>Time:</strong>
      <p>@Model.Time.ToString(@"hh\:mm")</p>
    </div>
  </div>

  <div class="form-group">
    <strong>Location:</strong>
    <p>@Model.Location</p>
  </div>

  <div class="mt-1">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-link link-primary">Back to All Events</a>
  </div>
</section>
