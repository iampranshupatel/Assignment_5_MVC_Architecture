@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Event Management</title>

  <link rel="stylesheet"
        href="~/css/style.css"
        asp-append-version="true" />
</head>
<body>
  <header>
    <div class="banner">
      <img
        src="https://cdn.pixabay.com/photo/2020/03/19/10/57/banner-4947120_1280.png"
        alt="Community Events Banner" />
      <div class="banner-text">Your Community Events Hub</div>
    </div>

    <nav class="main-nav">
      @if (User.Identity?.IsAuthenticated == true)
      {
        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
        <a asp-controller="Events" asp-action="Create" class="nav-link">Add Event</a>
        <a asp-controller="Home" asp-action="Logout" class="nav-link">Logout</a>
      }
      else
      {
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
      }
    </nav>
  </header>

  <main role="main" class="pb-3">
    @RenderBody()
  </main>

  @RenderSection("Scripts", required: false)
</body>
</html>
