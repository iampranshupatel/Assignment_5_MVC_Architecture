@page
@model LoginModel
@{
    ViewData["Title"] = "Member Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="auth-container">
  <h2 class="section-title">Member Login</h2>

  @* Only show when there are real errors *@
  @{
      var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).ToList();
  }
  @if (errors.Count > 0)
  {
      <div class="flash flash-danger">
          <ul>
          @foreach (var error in errors)
          {
              <li>@error.ErrorMessage</li>
          }
          </ul>
      </div>
  }

  <form method="post" class="auth-form fade-in-up">
    @Html.AntiForgeryToken()

    <div class="form-group">
      <label asp-for="Input.Email"></label>
      <input asp-for="Input.Email" type="email" class="form-control" autofocus />
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Input.Password"></label>
      <input asp-for="Input.Password" type="password" class="form-control" />
      <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Log In</button>

    <p class="mt-1">
      Don’t have an account?
      <a asp-area="Identity" asp-page="/Account/Register" class="link-primary">
        Register here
      </a>.
    </p>
  </form>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
